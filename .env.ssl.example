# SSL Certificate Renewal Job Configuration

# Enable/disable the SSL renewal job (default: true)
SSL_RENEWAL_ENABLED=true

# Cron schedule for the renewal job (default: daily at 2 AM)
# Examples:
# "0 2 * * *" - Daily at 2 AM
# "0 */6 * * *" - Every 6 hours
# "0 2 */7 * *" - Every 7 days at 2 AM
SSL_RENEWAL_SCHEDULE="0 2 * * *"

# Number of days before expiry to trigger renewal (default: 30)
SSL_RENEWAL_THRESHOLD_DAYS=30

# Maximum retry attempts for failed renewals (default: 3)
SSL_MAX_RETRY_ATTEMPTS=3

# Email for notifications and Let's Encrypt account
SSL_NOTIFICATION_EMAIL=admin@yourdomain.com

# Number of certificates to process in each batch (default: 5)
SSL_RENEWAL_BATCH_SIZE=5

# Log level for SSL renewal job (error, warn, info, debug)
SSL_RENEWAL_LOG_LEVEL=info

# Run renewal check on application startup (default: false)
SSL_RUN_ON_STARTUP=false

# SSL service configuration
SSL_STAGING=false
SSL_KEY_SIZE=2048
SSL_STORAGE_DIR=./ssl-certificates

# Timezone for cron schedule (default: UTC)
TZ=UTC