# Demo Organization Synchronization Configuration
# Copy this file to .env and configure for your deployment environment

# =============================================================================
# DEMO ORGANIZATION SYNC SETTINGS
# =============================================================================

# Enable automatic Demo organization sync during deployment
# Set to 'true' to sync Demo data from dev to prod during deployment
SYNC_DEMO_ON_DEPLOY=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Development database URL
DATABASE_URL=postgresql://user:password@localhost:5432/koveo_gestion_dev

# Production database URL (optional - for direct sync)
# If provided, sync script will directly sync to production database
# If not provided, sync will export to JSON file for manual import
PRODUCTION_DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/koveo_gestion_prod

# =============================================================================
# SYNC API CONFIGURATION (ALTERNATIVE TO DIRECT DB ACCESS)
# =============================================================================

# Production API URL for sync endpoint
# Use this if direct database access is not available
PRODUCTION_API_URL=https://your-production-app.com

# API key for sync authentication
SYNC_API_KEY=your-secure-sync-api-key

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployment environment
NODE_ENV=production

# Enable application warmup after deployment
WARMUP_ON_DEPLOY=true

# Application port (for warmup checks)
PORT=8080

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Database connection pool settings for sync operations
DB_POOL_MIN=1
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Sync operation timeout (milliseconds)
SYNC_TIMEOUT=300000

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Enable detailed sync logging
SYNC_DEBUG=false

# Log level for sync operations
SYNC_LOG_LEVEL=info

# =============================================================================
# REPLIT SPECIFIC SETTINGS
# =============================================================================

# Replit database URL (automatically provided by Replit)
# DATABASE_URL is automatically set by Replit

# Replit secrets for production sync
# Configure these in Replit Secrets:
# - PRODUCTION_DATABASE_URL
# - SYNC_API_KEY
# - PRODUCTION_API_URL

# =============================================================================
# DEPLOYMENT PLATFORM SETTINGS
# =============================================================================

# For Railway deployment
# RAILWAY_ENVIRONMENT=production

# For Vercel deployment  
# VERCEL_ENV=production

# For Heroku deployment
# HEROKU_APP_NAME=your-app-name

# For AWS deployment
# AWS_REGION=us-east-1

# For Google Cloud deployment
# GOOGLE_CLOUD_PROJECT=your-project-id

# =============================================================================
# DEMO DATA CONFIGURATION
# =============================================================================

# Demo organization name (must match exactly)
DEMO_ORG_NAME=Demo

# Demo data validation (enable additional checks)
DEMO_DATA_VALIDATION=true

# Preserve Demo user accounts across syncs
PRESERVE_DEMO_USERS=false

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Enable backup before Demo sync
BACKUP_BEFORE_SYNC=false

# Backup retention days
BACKUP_RETENTION_DAYS=7

# Backup storage path
BACKUP_STORAGE_PATH=/tmp/backups